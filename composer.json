{
  "name": "on1kel/oas-core",
  "description": "Open API Specification Core: Строго типизированное ядро (Core) для работы со спецификацией OpenAPI 3.1 / 3.2 на PHP",
  "type": "library",
  "license": "MIT",
  "keywords": [
    "openapi",
    "oas",
    "json-schema",
    "parser",
    "serializer",
    "php",
    "ref",
    "visitor"
  ],
  "require": {
    "php": "^8.2",
    "ext-json": "*",
    "ext-ctype": "*",
    "psr/http-client": "^1.0",
    "psr/http-factory": "^1.0"

  },
  "require-dev": {
    "phpunit/phpunit": "^11.2",
    "phpstan/phpstan": "^2.1",
    "friendsofphp/php-cs-fixer": "^3.89",
    "infection/infection": "^0.29"
  },
  "autoload": {
    "psr-4": {
      "On1kel\\OAS\\Core\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "On1kel\\OAS\\Tests\\": "test/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "analyse": "vendor/bin/phpstan analyse --configuration phpstan.neon --no-progress",
    "format": "vendor/bin/php-cs-fixer fix --config cs_dist.php --allow-risky=yes --show-progress=none"
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "config": {
    "allow-plugins": {
      "infection/extension-installer": true
    }
  }
}
